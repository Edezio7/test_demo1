#include<iostream>
using namespace std;
int main() {
    int rows;
    int cols;
    cout << "Enter number of rows: "<<endl;
    cin >> rows;
    cout << "Enter number of columns:"<<endl;
    cin >> cols;
    int arr[10][10];
    if (rows >2&cols >2) {
        cout << "Error: Array size exceeds the maximum limit of 2 by 2" << endl;
    }
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << "Enter element for position (" << i << "," << j << "): ";
            cin >> arr[i][j];  // Input each element
        }
    }
    cout << "The 2D array is:" << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << arr[i][j] << " ";  
    
        }
    }

    return 0;
}
